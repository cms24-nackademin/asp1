@model SignInForm

@{
    Layout = "_CenterScreenLayout";
    ViewData["Title"] = "Login";
}

<section id="signin">
    <div class="content surface">
        <div class="section-header">
            <h1 class="h2">@ViewData["Title"]</h1>
        </div>
        <div class="section-body">
            <form asp-action="SignIn" asp-controller="Auth" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>
                <div class="error-message">
                    @ViewBag?.ErrorMessage
                </div>
                <button type="submit" class="btn btn-blue btn-submit">Log In</button>
            </form>
        </div>
        <div class="section-footer">
            <span>Don't have an account?</span>
            <a asp-action="SignUp" asp-controller="Auth">Sign Up</a>
        </div>
    </div>
</section>

@await Html.PartialAsync("Partials/Sections/_ValidationScripts")